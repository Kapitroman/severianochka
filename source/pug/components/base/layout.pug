    //- используйте только для шрифта находящегося на первом экране
    link(rel="preload", href="fonts/Rubik-Bold.woff2", as="font", crossorigin="anonymous")
    link(rel="preload", href="fonts/Rubik-Regular.woff2", as="font", crossorigin="anonymous")
    link(rel="stylesheet", href="css/style.min.css")

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
